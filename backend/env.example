# Flask 설정
FLASK_ENV=production
FLASK_SECRET_KEY=your-secret-key-change-this-in-production

# PostgreSQL 데이터베이스 설정 (Railway에서 자동 생성)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=railway
DB_USER=postgres
DB_PASSWORD=your-password

# Google OAuth 2.0 설정
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Google Sheets API 설정 (서비스 계정 인증)
GOOGLE_TYPE=service_account
GOOGLE_PROJECT_ID=your-project-id
GOOGLE_PRIVATE_KEY_ID=your-private-key-id
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
GOOGLE_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
GOOGLE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
GOOGLE_TOKEN_URI=https://oauth2.googleapis.com/token
GOOGLE_AUTH_PROVIDER_X509_CERT_URL=https://www.googleapis.com/oauth2/v1/certs
GOOGLE_CLIENT_X509_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/your-service-account%40your-project.iam.gserviceaccount.com

# JWT 설정
JWT_SECRET_KEY=your-jwt-secret-key

# Google Gemini API 설정 (LLM 이미지 분석용)
GOOGLE_API_KEY=your-google-gemini-api-key

# 이메일 인증 설정 (Gmail SMTP)
MAIL_USERNAME=your-gmail@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USE_SSL=false
MAIL_DEBUG=true

# Firebase Cloud Messaging 설정 (푸시 알림용)
# 방법 1: 서비스 계정 키 파일 경로
FIREBASE_CREDENTIALS_PATH=/path/to/firebase-service-account-key.json
# 방법 2: 서비스 계정 키 JSON 문자열 (환경변수로 직접 설정)
# FIREBASE_CREDENTIALS_JSON={"type":"service_account","project_id":"...","private_key_id":"...","private_key":"...","client_email":"...","client_id":"...","auth_uri":"...","token_uri":"...","auth_provider_x509_cert_url":"...","client_x509_cert_url":"..."}